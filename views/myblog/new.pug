extends ../layout

block content
	.formbody
		form(action='/myblog/new',method='post',enctype='multipart/form-data')
			.form-title
				h3 New Blog Post
			.form-group
				label(for='title') Title
				input.form-control(name='title')
			.form-group
				label(for='body') Post
				textarea.form-control.col-md-12.textarea(name='body')
			.form-group
				label(for='image') Image
				input.form-control(name='image', type='file')
			.form-group
				input.btn.btn-primary.btn-md(type='submit',value='Post') 